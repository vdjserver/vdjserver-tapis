{
    "id":"igblast-ls6",
    "version":"0.7",
    "description":"IgBLAST on Lonestar6",
    "runtime":"ZIP",
    "runtimeOptions": ["NONE"],
    "containerImage":"tapis://data-storage.vdjserver.org/apps/igblast-ls6-0.7.tgz",
    "jobType":"BATCH",
    "jobAttributes": {
        "description": "default job description",
        "execSystemId": "test-ls6.tacc.utexas.edu",
        "fileInputs":[
          { "name":"repcalc_image", "inputMode": "FIXED", "envKey":"repcalc_image", "sourceUrl":"tapis://data-storage.vdjserver.org/singularity/repcalc-v2.2-imm4.4.sif", "targetPath":"repcalc-v2.2-imm4.4.sif" },
          { "name":"AIRRMetadata", "inputMode": "REQUIRED", "envKey":"AIRRMetadata", "targetPath":"." }
        ],
        "fileInputArrays":[
          { "name":"germline_archives", "inputMode": "FIXED", "targetDir":".",
            "sourceUrls": [ "tapis://data-storage.vdjserver.org/akc/germlines/db.2019.01.23.tgz",
                            "tapis://data-storage.vdjserver.org/akc/germlines/db.2025.10.31.tgz" ]},
          { "name":"JobFiles", "inputMode": "OPTIONAL", "targetDir":"." },
          { "name":"query", "inputMode": "OPTIONAL", "targetDir":"." }
        ],
        "parameterSet": {
            "logConfig": {
                "stdoutFilename": "tapisjob.out",
                "stderrFilename": "tapisjob.err"
            },
            "containerArgs": [
            ],
            "appArgs": [
            ],
            "envVariables": [
                {"key": "germline_archives", "inputMode": "FIXED", "value": "db.2019.01.23 db.2025.10.31" },
                {"key": "JobFiles", "inputMode": "INCLUDE_BY_DEFAULT" },
                {"key": "query", "inputMode": "INCLUDE_BY_DEFAULT" },
                {"key": "repertoires", "inputMode": "REQUIRED" },
                {"key": "species", "inputMode": "REQUIRED" },
                {"key": "strain", "inputMode": "INCLUDE_BY_DEFAULT" },
                {"key": "locus", "inputMode": "REQUIRED" },
                {"key": "ClonalTool", "inputMode": "INCLUDE_BY_DEFAULT" }
            ]
        }
    }
}

